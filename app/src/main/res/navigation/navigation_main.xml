<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_main"
    app:startDestination="@id/mainFragment">

    <dialog
        android:id="@+id/sortDialogFragment"
        android:name="com.example.sortandfilter.SortDialogFragment"
        android:label="fragment_sort_dialog"
        tools:layout="@layout/fragment_sort_dialog">
        <argument
            android:name="param"
            app:argType="com.example.sortandfilter.data.SortParam" />
    </dialog>
    <dialog
        android:id="@+id/filterDialogFragment"
        android:name="com.example.sortandfilter.FilterDialogFragment"
        android:label="FilterDialogFragment"
        tools:layout="@layout/fragment_filter_dialog">
        <argument
            android:name="text"
            app:argType="string" />
    </dialog>
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.sortandfilter.MainFragment"
        android:label="MainFragment">
        <action
            android:id="@+id/action_mainFragment_to_sortDialogFragment"
            app:destination="@id/sortDialogFragment" />
        <action
            android:id="@+id/action_mainFragment_to_filterDialogFragment"
            app:destination="@id/filterDialogFragment" />
    </fragment>
</navigation>